{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EmergencyCleaningRequest",
  "description": "Payload to request emergency cleaning from Handy.",
  "type": "object",
  "required": ["company_id", "property_external_id", "task_id", "requested_date", "requested_time", "urgency"],
  "properties": {
    "company_id": { "type": "string", "minLength": 1 },
    "property_external_id": { "type": "string", "minLength": 1 },
    "task_id": { "type": "string", "minLength": 1 },
    "requested_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "requested_time": { "type": "string", "pattern": "^\\d{2}:\\d{2}$" },
    "urgency": { "type": "string", "enum": ["standard", "urgent", "emergency"] },
    "notes": { "type": "string" }
  },
  "additionalProperties": false
}
