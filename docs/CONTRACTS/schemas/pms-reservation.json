{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PmsReservation",
  "description": "A reservation as received from a Property Management System.",
  "type": "object",
  "required": ["external_id", "property_external_id", "guest_name", "check_in", "check_out", "guest_count", "status"],
  "properties": {
    "external_id": { "type": "string", "minLength": 1 },
    "property_external_id": { "type": "string", "minLength": 1 },
    "guest_name": { "type": "string", "minLength": 1 },
    "check_in": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "check_out": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "guest_count": { "type": "integer", "minimum": 1 },
    "status": { "type": "string", "enum": ["booked", "canceled", "modified"] }
  },
  "additionalProperties": false
}
