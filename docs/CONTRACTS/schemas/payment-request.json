{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PaymentRequest",
  "description": "Payload to request payment via GHL. Our system does NOT process payments.",
  "type": "object",
  "required": ["company_id", "task_id", "cleaner_id", "amount_cents", "currency", "description"],
  "properties": {
    "company_id": { "type": "string", "minLength": 1 },
    "task_id": { "type": "string", "minLength": 1 },
    "cleaner_id": { "type": "string", "minLength": 1 },
    "amount_cents": { "type": "integer", "minimum": 1 },
    "currency": { "type": "string", "enum": ["USD"] },
    "description": { "type": "string", "minLength": 1 }
  },
  "additionalProperties": false
}
