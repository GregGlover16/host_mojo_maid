{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CreateBreezewayTask",
  "description": "Payload to create a task in Breezeway.",
  "type": "object",
  "required": ["company_id", "property_external_id", "task_id", "task_type", "scheduled_date", "scheduled_time", "duration_minutes"],
  "properties": {
    "company_id": { "type": "string", "minLength": 1 },
    "property_external_id": { "type": "string", "minLength": 1 },
    "task_id": { "type": "string", "minLength": 1 },
    "task_type": { "type": "string", "enum": ["turnover_clean", "deep_clean", "inspection"] },
    "scheduled_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "scheduled_time": { "type": "string", "pattern": "^\\d{2}:\\d{2}$" },
    "duration_minutes": { "type": "integer", "minimum": 1 },
    "assignee_external_id": { "type": "string", "minLength": 1 }
  },
  "additionalProperties": false
}
